@{
    ViewData["Title"] = "User Dashboard";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - DRCS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        body {
            min-height: 100vh;
        }

        .sidebar {
            min-width: 200px;
            max-width: 200px;
            background-color: #6c757d;
            color: white;
            min-height: 100vh;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 10px 15px;
            }

                .sidebar a:hover {
                    background-color: #5a6268;
                }

        .content {
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <h4 class="text-center py-3">User Panel</h4>
            <a href="#">Dashboard</a>
            <a href="#">My Profile</a>
            <a href="#">My Requests</a>
            <a href="#">Notifications</a>
            <a href="/auth/logout">Logout</a>
        </div>

        <!-- Main content -->
        <div class="content flex-grow-1">
            <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
                <div class="container-fluid">
                    <span class="navbar-brand mb-0 h1">Welcome, User</span>
                </div>
            </nav>

            <h2>Dashboard Overview</h2>
            <p>This is the user dashboard. You can view your activities, requests, and notifications here.</p>

            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card text-white bg-info mb-3">
                        <div class="card-body">
                            <h5 class="card-title">My Requests</h5>
                            <p class="card-text">10</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-secondary mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Completed Requests</h5>
                            <p class="card-text">6</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-warning mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Pending Requests</h5>
                            <p class="card-text">4</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>