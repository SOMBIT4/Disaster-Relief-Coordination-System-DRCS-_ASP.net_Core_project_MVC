@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - DRCS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        body {
            min-height: 100vh;
        }

        .sidebar {
            min-width: 200px;
            max-width: 200px;
            background-color: #6c757d;
            color: white;
            min-height: 100vh;
            transition: all 0.3s ease;
            position: fixed;
            top: 0;
            bottom: 0;
            left: -200px; /* hidden by default */
            z-index: 1050;
        }

            .sidebar.open {
                left: 0;
            }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 10px 15px;
            }

                .sidebar a:hover {
                    background-color: #5a6268;
                }

        .content {
            margin-left: 0;
            padding: 20px;
            transition: margin-left 0.3s ease;
        }

            .content.shift {
                margin-left: 200px;
            }
    </style>
</head>
<body>
    <div>
        <!-- Sidebar -->
        <div id="userSidebar" class="sidebar">
            <h4 class="text-center py-3">User Panel</h4>
            <a href="/Dashboard/User">Dashboard Overview</a>
            <a href="/User/AidRequest">Request For Aid</a>
            <a href="/User/Donate">Donate</a>
            <a href="/User/Donations">All Donations</a>
            <a href="/User/AidRequests">All Aid Requests</a>
            <a href="/api/auth/logout">Logout</a>
        </div>

        <!-- Main content -->
        <div id="userContent" class="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
                <div class="container-fluid">
                    <button class="btn btn-outline-dark" id="userToggleBtn">☰</button>
                    <span class="navbar-brand mb-0 h1 ms-3">Welcome, User</span>
                </div>
            </nav>

            @RenderBody()
        </div>
    </div>

    <script>
        const userSidebar = document.getElementById("userSidebar");
        const userContent = document.getElementById("userContent");
        const userToggleBtn = document.getElementById("userToggleBtn");

        userToggleBtn.addEventListener("click", () => {
            userSidebar.classList.toggle("open");
            userContent.classList.toggle("shift");
        });
    </script>
</body>
</html>
