@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - DRCS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        body {
            min-height: 100vh;
        }
        .sidebar {
            width: 220px;
            background-color: #343a40;
            color: white;
            position: fixed;
            top: 0;
            bottom: 0;
            left: -220px; /* hidden by default */
            transition: all 0.3s ease;
            z-index: 1050;
            overflow-y: auto;
        }
        .sidebar.open {
            left: 0; /* slide in */
        }
        .sidebar a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 10px 15px;
        }
        .sidebar a:hover {
            background-color: #495057;
        }
        .content {
            padding: 20px;
            transition: margin-left 0.3s ease;
            margin-left: 0;
        }
        .content.shift {
            margin-left: 220px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div id="sidebar" class="sidebar">
        <h4 class="text-center py-3">Admin Panel</h4>
        <a href="/Dashboard/Admin">Dashboard Overview</a>
        <a href="/Admin/Users">All Users</a>
        <a href="/Admin/Areas">All Affected Areas</a>
        <a href="/Admin/ReliefCenters">All Relief Centers</a>
        <a href="/Admin/AidRequests">All Aid Requests</a>
        <a href="/Admin/AidPreparation">Aid Preparation</a>
        <a href="/api/auth/logout">Logout</a>
    </div>

    <!-- Main Content -->
    <div id="mainContent" class="content">
        <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
            <div class="container-fluid">
                <!-- Toggle button -->
                <button class="btn btn-outline-dark" id="toggleBtn">☰</button>
                <span class="navbar-brand mb-0 h1 ms-3">Welcome, Admin</span>
            </div>
        </nav>

        @RenderBody()
    </div>

    <script>
        const sidebar = document.getElementById("sidebar");
        const content = document.getElementById("mainContent");
        const toggleBtn = document.getElementById("toggleBtn");

        toggleBtn.addEventListener("click", () => {
            sidebar.classList.toggle("open");
            content.classList.toggle("shift");
        });
    </script>
</body>
</html>
